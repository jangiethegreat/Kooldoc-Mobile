<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".CustomerHistory.CancelBookActivity"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <RelativeLayout
        android:id="@+id/relative1"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_300sdp"
        android:layout_marginBottom="@dimen/_400sdp"
        android:background="#0077b6"
        >

        <ImageView
            android:id="@+id/btn_back"
            android:layout_width="@dimen/_50sdp"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_backwhite"
            android:layout_marginTop="@dimen/_20sdp" />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Cancel Booking"
            android:textColor="@color/white"
            android:fontFamily="@font/montserratbold"
            android:textSize="@dimen/_30sdp"
            android:layout_marginTop="@dimen/_100sdp"
            android:layout_marginLeft="@dimen/_20sdp"/>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_200sdp"
            android:background="@drawable/border_lightdark2"
            android:padding="@dimen/_15sdp">

            <TextView
                android:id="@+id/txt_descHead"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Reason to cancel: "
                android:textSize="@dimen/_14sdp"
                android:layout_marginLeft="@dimen/_20sdp"

                android:textColor="@color/black"
                android:fontFamily="@font/montserratbold"
                android:layout_marginTop="@dimen/_60sdp" />

            <Spinner
                android:id="@+id/spinner_one"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40sdp"
                android:layout_marginLeft="@dimen/_20sdp"
                android:layout_marginRight="@dimen/_20sdp"
                android:paddingRight="@dimen/_20sdp"
                android:layout_marginTop="@dimen/_20sdp"
                android:paddingLeft="@dimen/_20sdp"
                android:textSize="@dimen/_20sdp"
                android:fontFamily="@font/montserrat"
                android:layout_below="@+id/txt_descHead"
                android:background="@drawable/rounded_corner_lightblue"/>
            <Button
                android:id="@+id/btn_cancelBook"
                android:layout_below="@+id/spinner_one"
                android:layout_width="@dimen/_250sdp"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/_30sdp"
                android:background="@drawable/rounded_corner_black"
                android:text="cancel booking"
                android:textColor="@color/white"
                android:fontFamily="@font/montserrat"
                />


        </RelativeLayout>


    </RelativeLayout>

</ScrollView>
