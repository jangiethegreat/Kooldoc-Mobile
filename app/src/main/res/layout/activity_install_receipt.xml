<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".Installation.InstallationDT"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <RelativeLayout
        android:id="@+id/relative1"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_300sdp"
        android:layout_marginBottom="@dimen/_400sdp"
        android:background="#0077b6"
        >

        <ImageView
            android:id="@+id/btn_back"
            android:layout_width="@dimen/_50sdp"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_backwhite"
            android:layout_marginTop="@dimen/_30sdp" />
        <TextView
            android:id="@+id/signUp_Head"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Installation Receipt"
            android:textSize="@dimen/_13sdp"
            android:fontFamily="@font/montregular"
            android:textColor="@color/white"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/_30sdp" />



        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Aircon Installation"
            android:textColor="@color/white"
            android:fontFamily="@font/montserratbold"
            android:textSize="@dimen/_26ssp"
            android:layout_marginTop="@dimen/_130sdp"
            android:layout_marginLeft="@dimen/_20sdp"/>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_200sdp"
            android:background="@drawable/border_lightdark2"
            android:padding="@dimen/_15sdp">

            <TextView
                android:id="@+id/relative_head"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Transaction History"
                android:textColor="@color/black"
                android:fontFamily="@font/montserratbold"
                android:textSize="@dimen/_16ssp"
                android:layout_marginTop="@dimen/_20sdp"
                android:layout_marginLeft="@dimen/_10sdp"
                />

            <TextView
                android:id="@+id/show_AirconType"
                android:layout_below="@+id/relative_head"
                android:layout_marginTop="@dimen/_20sdp"
                android:paddingTop="@dimen/_12sdp"
                android:paddingLeft="@dimen/_15sdp"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_width="@dimen/_340sdp"
                android:layout_height="@dimen/_40sdp"
                android:textSize="@dimen/_12ssp"
                android:text="Aircon Type: "
                android:textColor="@color/black"
                android:background="@drawable/rounded_corner_lightblue"
                android:fontFamily="@font/montmedium"/>

            <TextView
                android:id="@+id/show_AirconBrand"
                android:layout_below="@+id/show_AirconType"
                android:layout_marginTop="@dimen/_10sdp"
                android:paddingTop="@dimen/_12sdp"
                android:paddingLeft="@dimen/_15sdp"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_width="@dimen/_340sdp"
                android:layout_height="@dimen/_40sdp"
                android:textSize="@dimen/_12ssp"
                android:text="Aircon Brand: "
                android:textColor="@color/black"
                android:background="@drawable/rounded_corner_lightblue"
                android:fontFamily="@font/montmedium"/>

            <TextView
                android:id="@+id/show_AirconUtype"
                android:layout_below="@+id/show_AirconBrand"
                android:layout_marginTop="@dimen/_10sdp"
                android:paddingTop="@dimen/_12sdp"
                android:paddingLeft="@dimen/_15sdp"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_width="@dimen/_340sdp"
                android:layout_height="@dimen/_40sdp"
                android:text="Aircon Unit Type: "
                android:textSize="@dimen/_12ssp"
                android:textColor="@color/black"
                android:background="@drawable/rounded_corner_lightblue"
                android:fontFamily="@font/montmedium"/>

            <TextView
                android:id="@+id/show_AirconNumUnit"
                android:layout_below="@+id/show_AirconUtype"
                android:layout_marginTop="@dimen/_10sdp"
                android:paddingTop="@dimen/_12sdp"
                android:paddingLeft="@dimen/_15sdp"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_width="@dimen/_340sdp"
                android:layout_height="@dimen/_40sdp"
                android:textSize="@dimen/_12ssp"
                android:text="Aircon Number of Unit:"
                android:textColor="@color/black"
                android:background="@drawable/rounded_corner_lightblue"
                android:fontFamily="@font/montmedium"/>

            <TextView
                android:id="@+id/show_date"
                android:layout_below="@+id/show_AirconNumUnit"
                android:layout_marginTop="@dimen/_10sdp"
                android:paddingTop="@dimen/_12sdp"
                android:paddingLeft="@dimen/_15sdp"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_width="@dimen/_340sdp"
                android:layout_height="@dimen/_40sdp"
                android:textSize="@dimen/_12ssp"
                android:text="Service Date:"
                android:textColor="@color/black"
                android:background="@drawable/rounded_corner_lightblue"
                android:fontFamily="@font/montmedium"/>

            <TextView
                android:id="@+id/show_time"
                android:layout_below="@+id/show_date"
                android:layout_marginTop="@dimen/_10sdp"
                android:paddingTop="@dimen/_12sdp"
                android:paddingLeft="@dimen/_15sdp"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_width="@dimen/_340sdp"
                android:layout_height="@dimen/_40sdp"
                android:textSize="@dimen/_12ssp"
                android:text="Service Time:"
                android:textColor="@color/black"
                android:background="@drawable/rounded_corner_lightblue"
                android:fontFamily="@font/montmedium"/>

            <TextView
                android:id="@+id/show_price"
                android:layout_below="@+id/show_time"
                android:layout_marginTop="@dimen/_10sdp"
                android:paddingTop="@dimen/_12sdp"
                android:paddingLeft="@dimen/_15sdp"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_width="@dimen/_340sdp"
                android:layout_height="@dimen/_40sdp"
                android:textSize="@dimen/_12ssp"
                android:text="Service Price:"
                android:textColor="@color/black"
                android:background="@drawable/rounded_corner_lightblue"
                android:fontFamily="@font/montmedium"/>

            <TextView
                android:id="@+id/show_paymentMethod"
                android:layout_below="@+id/show_price"
                android:layout_marginTop="@dimen/_10sdp"
                android:paddingTop="@dimen/_12sdp"
                android:paddingLeft="@dimen/_15sdp"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_width="@dimen/_340sdp"
                android:layout_height="@dimen/_40sdp"
                android:textSize="@dimen/_12ssp"
                android:text="Payment Method:"
                android:textColor="@color/black"
                android:background="@drawable/rounded_corner_lightblue"
                android:fontFamily="@font/montmedium"/>


            <Button
                android:id="@+id/btnBook"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:text="Book Now"
                android:textColor="@color/white"
                android:fontFamily="@font/montmedium"
                android:background="@drawable/rounded_corner_black"
                android:layout_marginLeft="45dp"
                android:layout_marginTop="20dp"
                android:layout_below="@id/show_paymentMethod"/>



            <ProgressBar
                android:id="@+id/progressBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="?android:attr/progressBarStyleLarge"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:elevation="@dimen/_10sdp"
                android:visibility="gone"/>



        </RelativeLayout>


    </RelativeLayout>

</ScrollView>
