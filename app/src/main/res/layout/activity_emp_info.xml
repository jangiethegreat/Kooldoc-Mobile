<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EmployeeProfile.EmpInfoActivity"
    android:background="@color/white">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#32c8ea"
        >



        <ImageView
            android:id="@+id/upload_img"
            android:layout_width="@dimen/_20sdp"
            android:layout_height="@dimen/_20sdp"
            android:src="@drawable/ic_add"
            android:layout_marginTop="@dimen/_20sdp"
            android:background="@drawable/circle"
            android:layout_below="@+id/img_picture"
            android:layout_marginLeft="@dimen/_150sdp"/>


        <ImageView
            android:id="@+id/btn_goback"
            android:layout_width="@dimen/_40sdp"
            android:layout_height="@dimen/_25sdp"
            android:layout_marginTop="@dimen/_20sdp"
            android:layout_marginLeft="@dimen/_5sdp"
            android:layout_marginRight="@dimen/_320sdp"
            android:src="@drawable/ic_backarrow" />

        <TextView
            android:id="@+id/btn_logout"
            android:layout_width="@dimen/_50sdp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_240sdp"
            android:layout_marginTop="@dimen/_25sdp"
            android:fontFamily="@font/montmedium"
            android:text="Logout"
            android:textColor="@color/black"
            android:textSize="@dimen/_13sdp" />


        <ImageView
            android:id="@+id/img_picture"
            android:layout_width="@dimen/_240sdp"
            android:layout_height="@dimen/_110sdp"
            android:layout_centerHorizontal="true"

            android:layout_marginTop="@dimen/_60sdp"
            android:src="@drawable/image1" />

        <RelativeLayout
            android:id="@+id/rlt_Info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_220sdp"
            android:background="@drawable/emp_bglightblack"

            android:padding="@dimen/_15sdp">


            <TextView
                android:id="@+id/txt_fullName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/montserratbold"
                android:layout_marginTop="@dimen/_10sdp"
                android:text="Full name"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="@dimen/_23ssp"
                android:layout_marginBottom="@dimen/_40sdp"
                />

            <TextView
                android:id="@+id/txt_showEmail"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_45sdp"
                android:fontFamily="@font/montmedium"
                android:layout_below="@id/txt_fullName"
                android:text="Email Address"
                android:layout_marginLeft="@dimen/_20sdp"
                android:layout_marginRight="@dimen/_10sdp"
                android:layout_marginBottom="@dimen/_20sdp"
                android:paddingLeft="@dimen/_10sdp"
                android:paddingTop="@dimen/_15sdp"
                android:paddingBottom="@dimen/_15sdp"
                android:background="@drawable/rounded_corner"
                android:textColor="@color/black"
                android:textSize="@dimen/_12ssp"
                />
            <TextView
                android:id="@+id/txt_showPhone"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_45sdp"
                android:fontFamily="@font/montmedium"
                android:layout_below="@id/txt_showEmail"
                android:text="Phone Number"
                android:layout_marginLeft="@dimen/_20sdp"
                android:layout_marginRight="@dimen/_10sdp"
                android:layout_marginBottom="@dimen/_20sdp"
                android:paddingLeft="@dimen/_10sdp"
                android:paddingTop="@dimen/_15sdp"
                android:paddingBottom="@dimen/_15sdp"
                android:background="@drawable/rounded_corner"
                android:textColor="@color/black"
                android:textSize="@dimen/_12ssp"
                />

            <TextView
                android:id="@+id/txt_showAge"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_45sdp"
                android:fontFamily="@font/montmedium"
                android:layout_below="@id/txt_showPhone"
                android:text="Age"
                android:layout_marginLeft="@dimen/_20sdp"
                android:layout_marginRight="@dimen/_10sdp"
                android:layout_marginBottom="@dimen/_20sdp"
                android:paddingLeft="@dimen/_10sdp"
                android:paddingTop="@dimen/_15sdp"
                android:paddingBottom="@dimen/_15sdp"
                android:background="@drawable/rounded_corner"
                android:textColor="@color/black"
                android:textSize="@dimen/_12ssp"
                />

            <TextView
                android:id="@+id/txt_showExperience"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_45sdp"
                android:fontFamily="@font/montmedium"
                android:layout_below="@+id/txt_showAge"
                android:text="Experiences"
                android:layout_marginLeft="@dimen/_20sdp"
                android:layout_marginRight="@dimen/_10sdp"
                android:layout_marginBottom="@dimen/_20sdp"
                android:paddingLeft="@dimen/_10sdp"
                android:paddingTop="@dimen/_15sdp"
                android:paddingBottom="@dimen/_15sdp"
                android:background="@drawable/rounded_corner"
                android:textColor="@color/black"
                android:textSize="@dimen/_12ssp"
                />

            <TextView
                android:id="@+id/txt_showSpecialties"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_45sdp"
                android:fontFamily="@font/montmedium"
                android:layout_below="@+id/txt_showExperience"
                android:text="Specialties"
                android:layout_marginLeft="@dimen/_20sdp"
                android:layout_marginRight="@dimen/_10sdp"
                android:layout_marginBottom="@dimen/_20sdp"
                android:paddingLeft="@dimen/_10sdp"
                android:paddingTop="@dimen/_15sdp"
                android:paddingBottom="@dimen/_15sdp"
                android:background="@drawable/rounded_corner"
                android:textColor="@color/black"
                android:textSize="@dimen/_12ssp"
                />






        </RelativeLayout>
    </RelativeLayout>
</ScrollView>