<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AppLogin.UserLoginActivity"
    android:background="@color/white">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/kdcolor">



        <ImageView
            android:id="@+id/upload_img"
            android:layout_width="@dimen/_20sdp"
            android:layout_height="@dimen/_20sdp"
            android:src="@drawable/ic_add"
            android:layout_marginTop="@dimen/_180sdp"
            android:background="@drawable/circle"
            android:layout_centerHorizontal="true" />


        <ImageView
            android:id="@+id/btn_goback"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_30sdp"
            android:layout_marginLeft="@dimen/_10sdp"
            android:src="@drawable/ic_back" />




        <ImageView
            android:id="@+id/img_picture"
            android:layout_width="@dimen/_150sdp"
            android:layout_height="@dimen/_131sdp"
            android:layout_centerHorizontal="true"

            android:layout_marginTop="@dimen/_40sdp"
            android:src="@drawable/ic_person" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_220sdp"


            android:padding="@dimen/_15sdp">


            <TextView
                android:id="@+id/txt_fullName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginBottom="@dimen/_40sdp"
                android:fontFamily="@font/montserratbold"
                android:text="Full name"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="@dimen/_26sdp" />

            <TextView
                android:id="@+id/txt_showEmail"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_50sdp"
                android:layout_below="@id/txt_fullName"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_marginBottom="@dimen/_15sdp"
                android:background="@drawable/rounded_corner"
                android:fontFamily="@font/montmedium"
                android:paddingLeft="@dimen/_15sdp"
                android:paddingTop="@dimen/_17sdp"
                android:paddingBottom="@dimen/_10sdp"
                android:text="Email Address"
                android:textColor="@color/black"
                android:textSize="@dimen/_13ssp" />

            <TextView
                android:id="@+id/txt_showPhone"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_50sdp"
                android:layout_below="@id/txt_showEmail"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_marginBottom="@dimen/_15sdp"
                android:background="@drawable/rounded_corner"

                android:fontFamily="@font/montmedium"
                android:paddingLeft="@dimen/_15sdp"
                android:paddingTop="@dimen/_17sdp"
                android:paddingBottom="@dimen/_10sdp"
                android:text="Phone Number"
                android:textColor="@color/black"
                android:textSize="@dimen/_13ssp" />

            <RelativeLayout
                android:id="@+id/relative2"
                android:layout_width="@dimen/_500sdp"
                android:layout_height="@dimen/_200sdp"
                android:layout_below="@id/txt_showPhone"

                android:layout_centerHorizontal="true"
                android:layout_marginLeft="@dimen/_20sdp"
                android:layout_marginTop="@dimen/_20sdp"
                android:layout_marginBottom="@dimen/_20sdp"
                android:background="@drawable/relative_primary">

                <TextView
                    android:id="@+id/head_address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_13sdp"
                    android:layout_marginTop="@dimen/_20sdp"
                    android:fontFamily="@font/montserratbold"
                    android:text="Address Information"
                    android:textColor="@color/white" />

                <TextView
                    android:id="@+id/update_now"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_30sdp"
                    android:layout_marginTop="@dimen/_20sdp"
                    android:layout_toRightOf="@+id/head_address"
                    android:fontFamily="@font/montserratbold"
                    android:text="Update"

                    android:textColor="@color/kdcolor" />

                <TextView
                    android:id="@+id/txt_showAddress"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/head_address"
                    android:layout_marginLeft="@dimen/_13sdp"
                    android:layout_marginTop="@dimen/_20sdp"
                    android:fontFamily="@font/montmedium"
                    android:text="Street: "
                    android:textSize="@dimen/_16sdp"
                    android:textColor="@color/white" />

                <TextView
                    android:id="@+id/txt_showBarangay"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/txt_showAddress"
                    android:layout_marginLeft="@dimen/_13sdp"
                    android:layout_marginTop="@dimen/_7sdp"
                    android:fontFamily="@font/montmedium"
                    android:text="Barangay: "
                    android:textColor="@color/white" />

                <TextView
                    android:id="@+id/txt_showCity"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/txt_showBarangay"
                    android:layout_marginLeft="@dimen/_13sdp"
                    android:layout_marginTop="@dimen/_7sdp"
                    android:fontFamily="@font/montmedium"
                    android:text="City: "
                    android:textColor="@color/white" />

                <TextView
                    android:id="@+id/txt_showProvince"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/txt_showCity"
                    android:layout_marginLeft="@dimen/_13sdp"
                    android:layout_marginTop="@dimen/_7sdp"
                    android:fontFamily="@font/montmedium"
                    android:text="Province: "
                    android:textColor="@color/white" />

                <TextView
                    android:id="@+id/txt_showZipcode"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/txt_showProvince"
                    android:layout_marginLeft="@dimen/_13sdp"
                    android:layout_marginTop="@dimen/_7sdp"
                    android:fontFamily="@font/montmedium"
                    android:text="Zip code: "
                    android:textColor="@color/white" />

                <TextView
                    android:id="@+id/txt_showPropertyType"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/txt_showZipcode"
                    android:layout_marginLeft="@dimen/_14sdp"
                    android:layout_marginTop="@dimen/_7sdp"
                    android:fontFamily="@font/montmedium"
                    android:text="Property Type: "
                    android:textColor="@color/white" />


            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rlt_history"
                android:layout_width="@dimen/_500sdp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/relative2"
                android:layout_centerHorizontal="true"
                android:layout_marginRight="@dimen/_20sdp"

                android:background="@drawable/relative_primary">


                <TextView
                    android:id="@+id/history_head"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/montserrat"
                    android:paddingLeft="@dimen/_20sdp"
                    android:paddingTop="@dimen/_20sdp"
                    android:paddingBottom="@dimen/_20sdp"
                    android:text="Booking History"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_14ssp" />

                <TextView
                    android:id="@+id/view_bookingHistory"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_190sdp"
                    android:layout_marginTop="@dimen/_20sdp"
                    android:fontFamily="@font/montserrat"
                    android:text="View"
                    android:textColor="@color/kdcolor"
                    android:textSize="@dimen/_12ssp" />


            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rlt_feedback"
                android:layout_width="@dimen/_500sdp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/rlt_history"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/_20sdp"
                android:layout_marginRight="@dimen/_20sdp"
                android:background="@drawable/relative_primary">


                <TextView
                    android:id="@+id/feedback_head"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/montserrat"
                    android:paddingLeft="@dimen/_20sdp"
                    android:paddingTop="@dimen/_20sdp"
                    android:paddingBottom="@dimen/_20sdp"
                    android:text="Finished Booking"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_14ssp" />

                <TextView
                    android:id="@+id/view_completedBook"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_190sdp"
                    android:layout_marginTop="@dimen/_20sdp"
                    android:fontFamily="@font/montserrat"
                    android:text="View"
                    android:textColor="@color/kdcolor"
                    android:textSize="@dimen/_12ssp" />


            </RelativeLayout>

            <Button
                android:id="@id/btn_logout"
                android:layout_width="@dimen/_150sdp"
                android:layout_height="wrap_content"
                android:layout_below="@id/rlt_feedback"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="@dimen/_20sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginBottom="@dimen/_80sdp"
                android:background="@drawable/rounded_corner_black"
                android:fontFamily="@font/montserrat"
                android:text="Logout"
                android:textColor="#ED5050" />


        </RelativeLayout>
    </RelativeLayout>
</ScrollView>